<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_menu_frame_layout_header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/menu_gradient"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingRight="17dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_menu_image_view_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_ubicacion_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fragment_menu_text_view_community"
            fontPath="fonts/Roboto/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="App Bus Predictor"
            android:textColor="@color/colorTravelPredictionHistoryCard"
            android:textSize="20sp"
            android:visibility="visible"
            tools:ignore="MissingPrefix" />

    </FrameLayout>

    <View
        android:id="@+id/fragment_menu_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_menu_frame_layout_header" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_menu_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_menu_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/fragment_menu_divider">

            <com.example.baseproyect.ui.SettingsMenuBigItemView
                android:id="@+id/menu_item_view_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_ir_a_ubicacion"
                app:label="My profile"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />

            <com.example.baseproyect.ui.SettingsMenuBigItemView
                android:id="@+id/menu_item_set_bus_lines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_ir_a_ubicacion"
                app:label="My profile"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />
            <com.example.baseproyect.ui.SettingsMenuBigItemView
                android:id="@+id/menu_item_view_algorithms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_algoritmo"
                app:label="My profile"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>